<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myfirstjfxapp.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="77.0" text="First Name" />
    <TextField fx:id="txtFirstName" promptText="First Name" />
    <Label prefHeight="17.0" prefWidth="154.0" text="Last Name" />
    <TextField fx:id="txtLastName" promptText="Last Name" />
    <Button fx:id="btnForClicking" onAction="#onHelloButtonClick" text="Ok" />
   <Label fx:id="lblDisplayPerson" />
   <Button fx:id="btnDisplayPerson" onAction="#onResetButtonClick" text="Reset" />
</VBox>
